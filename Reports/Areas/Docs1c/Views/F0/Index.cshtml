@model MvcApplication2.Areas.Docs1c.Models.F0Model
@{ Layout = null; }
<style type="text/css">
    /* это надо для валидации. рисует красную рамку и если её нет, то нужна чёрная. иначе всё смещается.*/
    input {
        border: 1px solid black;
    }

        input.error {
            border: 1px solid red;
        }

    #p_docs1c_f0_layout_container {
        width: 100%;
        height: 800px;
    }

        #p_docs1c_f0_layout_container div {
            width: inherit;
            height: 100%;
            overflow: auto;
        }

    #p_docs1c_f0_sect_1 {
        width: 100%;
        height: 50%;
        background-color: #ffc;
        border: 1px solid black;
    }

    #p_docs1c_f0_sect_2 {
        width: 100%;
        height: 50%;
        background-color: #fcf;
        border: 1px solid black;
    }
</style>
<div id="p_docs1c_f0_layout_container">
    <table id="p_docs1c_f0_sect_1">
        <tr>
            <td style="width: 330px; border-right: 1px solid black; padding: 2px;">
                <div id="p_docs1c_f0_filter_panel">
                    @{ Html.RenderPartial("Filter", Model.FilterData); }
                </div>
            </td>
            <td style="border-right: 1px solid black; padding: 2px;">
                <div id="p_docs1c_f0_data_grid_panel">
                    @{ Html.RenderPartial("FilteredView", Model.WorkingData); }
                </div>
            </td>
        </tr>
    </table>
    <table id="p_docs1c_f0_sect_2">
        <tr>
            <td style="width: 240px; border-right: 1px solid black; padding: 2px;">
                <div id="p_docs1c_f0_command_panel">
                    @{ Html.RenderPartial("Command"); }
                </div>
            </td>
            <td style="border-right: 1px solid black; padding: 2px;">
                <div id="p_docs1c_f0_detail_panel">
                </div>
            </td>
        </tr>
    </table>
    <input type="hidden" id="p_docs1c_f0_current_id" />
</div>
